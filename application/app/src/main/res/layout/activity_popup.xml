<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context=".PopupActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="전구등록"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/popup_title"
        android:fontFamily="@font/nanumr"
        android:textColor="#FFF"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/popup_title"
        android:id="@+id/popup_name"
        android:hint="설정하실 전구의 이름"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popuo_code"
        android:hint="전구코드"
        app:layout_constraintTop_toBottomOf="@id/popup_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/popuo_code"
        android:background="#FFFFFF"
        android:id="@+id/view"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="확인"
                android:id="@+id/tv_confirm"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/nanumr"
                android:textColor="#FFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="취소"
                android:id="@+id/tv_cancel"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/nanumr"
                android:textColor="#FFF"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>